{
    "version": 1,
    "name": "docker_heapster",
    "schedule": {
        "type": "simple",
        "interval": "10s"
    },
    "deadline": "10s",
    "workflow": {
        "collect": {
            "metrics": {
                "/intel/docker/*": {}
            },
         "publish":[
            {
               "plugin_name": "heapster",
               "config": {
                  "stats_depth": 0,
                  "server_port": 8777,
                  "stats_span": "10m",
                  "export_tmpl_file": "builtin"
               }
            }
         ]
       }
    }
}
